#!/usr/bin/env bash

# Brewfile hash: {{ include "Brewfile" | sha256sum }}

# Check if Homebrew is installed
if [[ -x /home/linuxbrew/.linuxbrew/bin/brew ]]; then
    echo "[brew] running bundle install..."
    if /home/linuxbrew/.linuxbrew/bin/brew bundle --file="{{ .chezmoi.sourceDir }}/Brewfile"; then
        echo "[brew] bundle install complete"
    else
        echo "[brew] ERROR: bundle install failed"
    fi
elif [[ -x /opt/homebrew/bin/brew ]]; then
    echo "[brew] running bundle install..."
    if /opt/homebrew/bin/brew bundle --file="{{ .chezmoi.sourceDir }}/Brewfile"; then
        echo "[brew] bundle install complete"
    else
        echo "[brew] ERROR: bundle install failed"
    fi
fi
