{{ if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env bash
# hash: {{ include "private_Library/LaunchAgents/com.local.KeyRemapping.plist" | sha256sum }}

set -euo pipefail

launchctl unload ~/Library/LaunchAgents/com.local.KeyRemapping.plist 2>/dev/null || true
if launchctl load ~/Library/LaunchAgents/com.local.KeyRemapping.plist 2>/dev/null; then
    echo "[launchctl] loaded com.local.KeyRemapping"
else
    echo "[launchctl] ERROR: failed to load com.local.KeyRemapping"
fi
{{ end -}}
